{
  "manifest_version": 3,
  "name": "WhatsApp QR Reader",
  "version": "1.0",
  "description": "WhatsApp Web'de QR kodlarÄ± otomatik oku",
  "permissions": ["activeTab", "clipboardWrite"],
  "host_permissions": ["*://web.whatsapp.com/*"],
  "content_scripts": [{
    "matches": ["*://web.whatsapp.com/*"],
    "js": ["content.js"],
    "css": ["style.css"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}